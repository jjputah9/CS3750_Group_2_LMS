@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <p>Already Registered? <a asp-area="Identity" asp-page="Login">Log in</a></p>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.fName" class="form-control" autocomplete="given-name" />
                <label asp-for="Input.fName"></label>
                <span asp-validation-for="Input.fName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.lName" class="form-control" autocomplete="family-name" />
                <label asp-for="Input.lName"></label>
                <span asp-validation-for="Input.lName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.DOB" class="form-control" type="date" autocomplete="bday" />
                <label asp-for="Input.DOB"></label>
                <span asp-validation-for="Input.DOB" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 row">
                <h4>Account Type<br></h4>
                    <div class="form-check form-check-inline col-sm-3">
                        <input class="btn-check" type="radio" asp-for="Input.UserType" value="Student" id="radioStudent" checked />
                        <label class="btn btn-secondary" for="radioStudent">Student</label>
                    </div>
                    <div class="form-check form-check-inline col-sm-3">
                        <input class="btn-check" type="radio" asp-for="Input.UserType" value="Instructor" id="radioTeacher" />
                        <label class="btn btn-secondary" for="radioTeacher">Instructor</label>
                    </div>
				<span asp-validation-for="Input.UserType" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create Account</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
