@page
@model LMS.Pages.Dashboard.DashboardIndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.CurrentUser?.fName @Model.CurrentUser?.lName!</h1>
    <h2>Dashboard</h2>

    <div class="container my-4">
        <div class="row justify-content-center">

            @if (Model.CurrentUser?.UserType == "Student")
            {
                <h3>Your registered courses:</h3>
                @if (Model.Courses != null && Model.Courses.Count > 0)
                {
                    foreach (var course in Model.Courses)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4 d-flex">
                            <div class="card flex-fill d-flex flex-column">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@course.CourseTitle</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">@course.DeptName @course.CourseNum</h6>
                                    <p class="card-text">@course.Location</p>
                                    <p class="card-text">@course.StartTime.ToString("h:mm tt") - @course.EndTime.ToString("h:mm tt") @FormatMeetDays(course.MeetDays)</p>
                                </div>
                            </div>
                        </div>
                    }
                } 
                else
                {
                    <p class="text-muted"> You are not registered for any courses!</p>
                }
            }
            else
            {
                <h3>Your courses:</h3>
                foreach (var course in Model.Courses)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4 d-flex">
                        <div class="card flex-fill d-flex flex-column">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@course.CourseTitle</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@course.DeptName @course.CourseNum</h6>
                                <p class="card-text">@course.Location</p>
                                <p class="card-text">@course.StartTime.ToString("h:mm tt") - @course.EndTime.ToString("h:mm tt") @FormatMeetDays(course.MeetDays)</p>

                                <div class="mt-auto">
                                    <a class="btn btn-primary w-100"
                                       asp-page="/Dashboard/Index"
                                       asp-page-handler="GoToAssignments"
                                       asp-route-courseId="@course.Id">
                                        Manage Assignments
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

            

        </div>
    </div>

    
</div>

@functions {
    string FormatMeetDays(bool[] days)
    {
        if (days == null || days.Length < 5)
            return "";

        string[] labels = { "M", "T", "W", "T", "F" };
        var result = new List<string>();

        for (int i = 0; i < 5; i++)
        {
            if (days[i])
                result.Add(labels[i]);
        }

        return string.Join("/", result);
    }
}


