@using Microsoft.AspNetCore.Identity
@using LMS.models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- LMS pages: logged-in users only -->
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/About">About</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Profile">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Calendar">Calendar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/File">File</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Registration">Registration</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Courses">Courses</a>
        </li>

        <!-- Account actions -->
        <li class="nav-item">
            <a class="nav-link text-dark"
               asp-area="Identity"
               asp-page="/Account/Manage/Index">
                Hello @User.Identity?.Name!
            </a>
        </li>

        <li class="nav-item">
            <form asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark"
               asp-area="Identity"
               asp-page="/Account/Register">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark"
               asp-area="Identity"
               asp-page="/Account/Login">
                Login
            </a>
        </li>
    }
</ul>
