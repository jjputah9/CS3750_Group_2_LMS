@page "{assignmentId:int}"
@model LMS.Pages.Assignments.SubmissionsModel

@{
    ViewData["Title"] = "Submissions";
}

<div class="container mt-4">
    <h2>Submissions</h2>

    @if (!Model.Submissions.Any())
    {
        <div class="alert alert-info">
            No submissions yet.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Submitted</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Submissions)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.SubmittedAt</td>
                        <td>@item.Status</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary">
                                Grade
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>